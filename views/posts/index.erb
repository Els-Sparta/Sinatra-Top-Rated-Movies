<div class="row">
  <div class="jumbotron">
    <h1>Welcome to my Top Movies Homepage</h1>
  </div>
</div>
<% @movies.each do |movie| %>
<div class="row row-background">
  <div class="hidden-background">
    <%= movie.background_img %>
  </div>
  <div class="col-md-6">
    <h2><a href="<%= movie.id %>"><%= movie.title %></a></h2>
    <h4>Release Year: <%= movie.release_year %></h4>
    <h4>Rating: <%= movie.rating %></h4>
  </div>
  <div class="col-md-6 ">
    <a href="<%= movie.id %>"><img class="size" src="<%= movie.images %>" alt="Not Supported"></a>
  </div>
</div>
<% end %>
